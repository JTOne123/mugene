{
  "name": "mugene",
  "description": "VSCode part of a language server",
  "author": "Atsushi Eno",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "atsushieno",
  "repository": {
    "type": "git",
    "url": "https://github.com/atsushieno/mugene"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mugene",
    "onCommand:mugene.compile"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "mugene",
        "extensions": [
          ".mugene",
          ".mml"
        ],
        "aliases": [
          "mugene",
          "Mugene"
        ],
        "mimetypes": [
          "text/x-mugene"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Mugene LSP configuration",
      "properties": {
        "mugeneLSP.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "mugeneLSP.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    },
    "commands": [{
      "command": "mugene.compile",
      "title": "Compile Mugene MML",
      "category": "mugene"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "prebuild": "mkdir -p ./out/tools/mugene/ && cp -R ../../mugene/bin/Debug/* ./out/tools/mugene/",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode": "^1.1.8",
    "vscode-languageclient": "^4.1.4"
  }
}
